{
  "expo": {
    "icon": "./assets/images/icon.png",
    "scheme": "easy-display-client",
    "splash": {
      "image": "./assets/images/splash-image.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      [
        "@react-native-tvos/config-tv",
        {
          "androidTVBanner": "./assets/tv_icons/icon-320x180.png",
          "androidTVIcon": "./assets/images/icon.png",
          "appleTVImages": {
            "icon": "./assets/tv_icons/icon-1280x768.png",
            "iconSmall": "./assets/tv_icons/icon-400x240.png",
            "iconSmall2x": "./assets/tv_icons/icon-800x480.png",
            "topShelf": "./assets/tv_icons/icon-1920x720.png",
            "topShelf2x": "./assets/tv_icons/icon-3840x1440.png",
            "topShelfWide": "./assets/tv_icons/icon-2320x720.png",
            "topShelfWide2x": "./assets/tv_icons/icon-4640x1440.png"
          }
        }
      ],
      "expo-router",
      "expo-font",
      "expo-video",
      [
        "expo-splash-screen",
        {
          "android": {
            "backgroundColor": "#000000",
            "image": "./assets/images/splash-image.png",
            "imageWidth": 200
          }
        }
      ]
    ],
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "icon": "./assets/images/adaptive-icon.png",
      "package": "com.heavybear.easydisplayclient",
      "targetSdkVersion": 34,
      "minSdkVersion": 21,
      "permissions": ["POST_NOTIFICATIONS"],
      "splash": {
        "image": "./assets/images/splash-image.png",
        "resizeMode": "contain",
        "backgroundColor": "#000000"
      },
      "theme": "@style/Theme.App.SplashScreen"
    },
    "ios": {
      "splash": {
        "backgroundColor": "#000",
        "image": "./assets/images/splash-image.png"
      },
      "bundleIdentifier": "com.anonymous.easydisplayclient"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png",
      "output": "static"
    },
    "experiments": {
      "typedRoutes": true
    },
    "newArchEnabled": true,
    "name": "easy-display-client",
    "slug": "easy-display-client",
    "extra": {
      "router": {},
      "eas": {
        "projectId": "cb317475-bd05-4633-bf3b-abc21a05710a"
      }
    }
  }
}
