{
  "name": "easy-display",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "release": "standard-version --skip.tag && node scripts/sync-version.js && git add . && git commit -m \"chore(release): sync all versions\" && git tag v$(node -p \"require('./package.json').version\")"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "standard-version": "^9.5.0",
    "turbo": "^2.5.4"
  },
  "pnpm": {
    "overrides": {
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "@types/react": "19.0.0",
      "@types/react-dom": "19.0.0"
    }
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=18"
  }
}
